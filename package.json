{
	"name": "app",
	"version": "1.0.0",
	"engines": {
		"node": ">=22.18.0 <23",
		"npm": ">=11.5.2 <12",
		"pnpm": ">=10.14.0 <11"
	},
	"scripts": {
		"lint": "npx eslint . --fix",
		"watch:s": "npm run watch --workspace=server",
		"dev:s": "npm run dev --workspace=server",
		"build:s": "npm run build --workspace=server",
		"start:s": "npm run start:prod --workspace=server",
		"test:s": "npm run test --workspace=server",
		"test:watch:s": "npm run test:watch --workspace=server",
		"test:cov:s": "npm run test:cov --workspace=server",
		"test:e2e:s": "npm run test:e2e --workspace=server",
		"watch:c": "npm run watch --workspace=client",
		"dev:c": "npm run dev --workspace=client",
		"build:c": "npm run build --workspace=client",
		"start:c": "npm run preview --workspace=client",
		"test:c": "npm run test --workspace=client",
		"test:react": "npm run test:react --workspace=client",
		"test:react:watch": "npm run test:react:watch --workspace=client",
		"test:react:cov": "npm run test:react:cov --workspace=client",
		"test:watch:c": "npm run test:watch --workspace=client",
		"test:cov:c": "npm run test:cov --workspace=client",
		"test:e2e:c": "npm run test:e2e --workspace=client",
		"prepare": "husky install || true"
	},
	"workspaces": [
		"/apps/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@jest/types": "^30.0.5",
		"@types/jest": "^30.0.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"cross-env": "^10.0.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.3.0",
		"husky": "^8.0.3",
		"jest": "^30.0.5",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0"
	},
	"dependencies": {
		"tslib": "^2.8.1",
		"zod": "^4.1.1"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,jsx,ts,tsx,html,css,scss,json}": "prettier --write"
	}
}
