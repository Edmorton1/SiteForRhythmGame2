{
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"importsNotUsedAsValues": "remove",
		"downlevelIteration": true,
		"useDefineForClassFields": true,

		// Type Checking
		"strict": true,
		// РУГАЕТСЯ ЕСЛИ НЕТ ЯВНОГО return
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		// РУГАЕТСЯ ЕСЛИ НЕТ ЯВНОГО ОПРЕДЕЛЕНИЯ ПАРАМЕТРА ЕСЛИ ОН undefined
		"exactOptionalPropertyTypes": true,
		// ВОЗВРАЩАЕТ undefined ИЗ НЕЯВНЫХ КОНСТРУКЦИЙ
		"noUncheckedIndexedAccess": false,
		// РУГАЕТСЯ ЕСЛИ ПИШЕТСЯ ЧЕРЕЗ .asd ВМЕСТО ["asd"]
		"noPropertyAccessFromIndexSignature": true,

		// Unused Code
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,

		// Output Options
		"skipLibCheck": true,
		// "module": "nodenext",
		// "target": "esnext",
		// "moduleResolution": "",

		// "declaration": true,
		// "declarationMap": true,
		// "removeComments": true,
		// "importHelpers": true,
		// "forceConsistentCasingInFileNames": true,
		// "moduleDetection": "force",
		// "verbatimModuleSyntax": true,

		// Decorators
		// "experimentalDecorators": true,
		// "emitDecoratorMetadata": true,

		// Side Effects
		"noUncheckedSideEffectImports": true,
		"noEmit": true
	},
	"exclude": ["node_modules", "dist", ".jest-cache"]
}
